enum Role {
    MasterAdmin
    User
}

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("MYSQL_URL")
}

model User {
    id        Int    @id @default(autoincrement())
    fullName  String
    email     String    @unique
    password  String
    role      String    @default("User")
    createdAt DateTime  @default(now())
    updatedAt DateTime? @updatedAt
}
